{
  "compilerOptions": {
    // "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "allowJs": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "ES2016",
    "skipLibCheck": true,
    "lib": [
      "ES6",
      "DOM"
    ],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "node_modules/@types",
      // "src/@types"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
  ]
}